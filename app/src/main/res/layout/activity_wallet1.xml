<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team.quattro.portfel.wallet1">

    <TextView android:text="Stan Portfela" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnPayment"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Wpłata" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnWithdraw"
        android:layout_below="@+id/imgBtnPayment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Wypłata" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnStory"
        android:layout_below="@+id/imgBtnWithdraw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Historia operacji" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgBtnExchange"
        android:layout_below="@+id/imgBtnStory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Przewalutowanie" />

</RelativeLayout>
